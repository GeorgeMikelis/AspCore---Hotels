    ViewData["Title"] = "Profile";
}

<div class="profile-container">
    <div class="col mt-3 ml-3 favRevContainer">
        <div class="row">
            <label class="label" for="">FAVORITES</label>
            <ol>
                <li>Hilton Hotel</li>
            </ol>
        </div>
        <div class="row">
            <label class="label" for="">REVIEWS</label>
            <ol>
                <li>Hilton Hotel</li>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
            </ol>
        </div>
    </div>
    <div class="col mt-3 ml-3 bookingsContainer">
        <div class="bookingsBar">
            My bookings
        </div>
        <div class="row shortRoomDescription mt-3 ml-1 mr-1">
            <div class="imgContainer ">
                <img src="~/img/room-1.jpg" class="resizeImg">
            </div>
            <div class="vl ml-1 mr-1"></div>
