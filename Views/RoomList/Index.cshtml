@{
    ViewData["Title"] = "Room List";
}

@model Hotels.Models.SearchFiltersModel

<div class="roomList-container">
    <form class="col mt-3 ml-3 filtersContainer" method="get">
        <div class="fTitle">
            FIND THE PERFECT<br>HOTEL
        </div>
        <select class="mt-3 mb-1" name="countOfGuests" id="countOfGuests">
            <option value="" disabled selected>Count of Guests</option>
            @foreach (var item in Model.CountOfGuests)
            {
                <option value="@item">@item</option>
            }
        </select>
        <select class="mb-1" name="city" id="city">
            <option value="" disabled selected>City</option>
            @foreach (var item in Model.Cities)
            {
                <option value="@item">@item</option>
            }
        </select>
        <select class="mb-1" name="roomType" id="roomType">
            <option value="" disabled selected>Room Type</option>
            @foreach (var item in Model.RoomTypes)
            {
                <option value="@(item.Item1)">@(item.Item2)</option>
            }
        </select>
        <p>
            <label for="amount">Price range:</label>
            <input type="text" id="amount" readonly style="border:0; color:#7c4200; font-weight:bold;">
        </p>
        <div class="slider-wrapper">
            <div id="slider-range"></div>
        </div>

        <label for="datepicker">Date:</label>
        <input type="text" id="datepicker-2months">
        <br />
        <input type="text" id="datepicker-3months-right">
        <button type="submit" class="mt-1 room-btn flex-grow-1">FIND HOTEL</button>

    </form>
    <div class="col mt-3 ml-3 resultsContainer">
        <div class="resultsBar">
            Search Results
        </div>
        <div class="row shortRoomDescription mt-3 ml-1 mr-1">
            <div class="imgContainer ">
                <img src="~/img/room-1.jpg" class="resizeImg">
            </div>
            <div class="vl ml-1 mr-1"></div>
            <div class="col smallDescriptionText">
                <h3>HILTON HOTEL</h3>
                <h5>ATHENS, ZWGRAFOU</h5>
                <p class="text">
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor
                    incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud
                    exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
                </p>
                <div class="row justify-end mt-1">
                    <button type="button" class="room-btn">Go to Room Page</button>
                </div>
            </div>
            <div class="space-between barContainer mt-1">
                <div class="costBox mr-1">
                    <p>Per Night: 350&euro;</p>
                </div>
                <div class="infoBar">
                    <p style="padding: 0 100px;">Count of Guests: 1</p>
                    <p style="padding: 0 100px;" class="no-border">Type of Room: Single Room</p>
                </div>
            </div>
        </div>
    </div>
</div>