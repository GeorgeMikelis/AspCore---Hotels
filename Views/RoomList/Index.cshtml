@{
    ViewData["Title"] = "Room List";
}

@model IEnumerable<Hotels.Models.Room>


<div class="roomList-container">
    @await Component.InvokeAsync("Filters")
    <div class="col mt-3 ml-3 resultsContainer">
        <div class="resultsBar">
            Search Results
        </div>
        <ul>
            @foreach (var room in Model)
            {
                <li style="list-style-type:none" class="row shortRoomDescription mt-3 ml-1 mr-1">
                    <div class="imgContainer ">
                        <img src="~/img/@(room.Photo)" class="resizeImg">
                    </div>
                    <div class="vl ml-1 mr-1"></div>
                    <div class="col smallDescriptionText">
                        <h3>@(room.Name)</h3>
                        <h5>@(room.City), @(room.Area)</h5>
                        <p class="text">
                            @(room.ShortDescription)
                        </p>
                        <div class="row justify-end mt-1">
                            <a style="text-decoration:none" class="room-btn" asp-controller="RoomInfo" asp-action="Index" asp-route-roomId="@room.RoomId">Go to Room Page</a>
                        </div>
                    </div>
                    <div class="space-between barContainer mt-1">
                        <div class="costBox mr-1">
                            <p>Per Night: @(room.Price)&euro;</p>
                        </div>
                        <div class="infoBar">
                            <p style="padding: 0 100px;">Count of Guests: @(room.CountOfGuests)</p>
                            <p style="padding: 0 100px;" class="no-border">Type of Room: @(room.RoomType)</p>
                        </div>
                    </div>
                </li>
            }
        </ul>

    </div>
</div>